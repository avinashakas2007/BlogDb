<%- include("partials/header") %>

<!-- Banner Section -->
<div class="banner">
  <img src="/uploads/banner1.jpg" alt="Banner Image" class="banner-image">
  <div class="banner-text">
    <h1>Welcome to Wander & Wonder!</h1>
    <p>Your journey of creativity and stories starts here.</p>
  </div>
</div>

<h1>Home</h1>
<p> <%= startingContent %> </p>

<!-- Loop through each post -->
<% posts.forEach(function(post) { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p>
      <%= post.content ? post.content.substring(0, 500) + " ..." : "No content available." %>
      <a href="/posts/<%= post._id %>" class="read-more-link">Read More</a>
    </p>
  </div>
  <hr> 
<% }); %>

<%- include("partials/footer") %>
